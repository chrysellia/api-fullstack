@model MarketplaceMvc.Models.Product

<h1>Supprimer le Produit</h1>

<div>
    <h4>Voulez-vous vraiment supprimer ce produit ?</h4>
    <dl class="dl-horizontal">
        <dt>Nom</dt>
        <dd>@Model.Name</dd>

        <dt>Prix</dt>
        <dd>@Model.Price</dd>

        @* Décommentez ceci si votre entité `Product` a une propriété `Category` correctement liée *@
        @* <dt>Catégorie</dt>
        <dd>@Model.Category?.Name</dd> *@
    </dl>

    <form asp-action="Supprimer" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Supprimer</button>
        <a asp-action="Index" class="btn btn-secondary">Annuler</a>
    </form>
</div>
